    <%= flash[:notice] %>
    <h1>Books</h1>
    <table>
      <thead>
        <th>Title</th>
        <th>Body</th>
      </thead>
    </table>
    <table>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <tb><span><%= book.title %></span></tb>
          <tb><span><%= book.body %></span></tb>
          <tb><span><%= link_to "Show", book_path(book.id) %></span></tb>
          <tb><span><%= link_to "Edit", edit_book_path(book.id) %></span></tb>
          <tb><span><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></span></tb>
        </tr>
      <% end %>
    </table>


    <h1>New book</h1>
    <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>

    <%= form_with model: @book do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Body</h4>
      <%= f.text_area :body %>

      <%= f.submit 'Create Book' %>
    <% end %>

