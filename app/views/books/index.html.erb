<html>
  <head>

  </head>

  <body>

    <h1>Books</h1>
    <table>
      <thead>
        <th>Title</th>
        <th>Body</th>
      </thead>
    </table>
    <table>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <tb><span><%= book.title %></span></tb>
          <tb><span><%= book.body %></span></tb>
          <tb><span><%= link_to "Show", book_path(book.id) %></span></tb>
          <tb><span><%= link_to "Edit", edit_book_path(book.id) %></span></tb>
          <tb></tb>
        </tr>
      <% end %>
    </table>


    <h1>New book</h1>

    <%= form_with model: @book do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Body</h4>
      <%= f.text_area :body %>

      <%= f.submit 'Create Book' %>
    <% end %>
  </body>
</html>

