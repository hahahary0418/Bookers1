<html>
  <head>

  </head>

  <body>
    <h1>Books</h1>
    
      <table>
        <thead>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </thead>
        
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <tb><%= book.title %></tb>
            <tb><%= book.body %></tb>
            <tb></tb>
            <tb></tb>
            <tb></tb>
          </tr>
          <% end %>
        </tbody>
      </table>
    
    
    <h2>New Book</h2>
    <%= form_with model: @book do |f| %>
      <div class="field">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
      </div>

      <div class="field">
        <label for="book_body">Body</label>
        <%= f.text_area :body %>
      </div>

      <div class="actions">
        <%= f.submit 'Create Book' %>
      </div>
      <% end %>
    </form>
  </body>
</html>

