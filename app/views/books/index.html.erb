<html>
  <head>

  </head>

  <body>
    <p id="notice"><%= flash[:notice] %></p>
    <h1>Books</h1>
    <table>
      <thead>
        <th>Title</th>
        <th>Body</th>
      </thead>
    
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><span><%= book.title %></span></td>
          <td><span><%= book.body %></span></td>
          <td><span><%= link_to "Show", book_path(book.id) %></span></td>
          <td><span><%= link_to "Edit", edit_book_path(book.id) %></span></td>
          <td><span><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></span></td>
        </tr>
      <% end %>
    </table>


    <h2>New book</h2>
    
    <% if @book.errors.any? %>
    <div class="errors_explanation">
      <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
    

    <%= form_with model: @book do |f| %>
      <div class="field">
        <label for="title">Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <label for="body">Body</label>
        <%= f.text_area :body %>
      </div>
      <div dlass="action">
        <%= f.submit 'Create Book' %>
      </div>
    <% end %>
  </body>
</html>

